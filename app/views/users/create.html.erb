<div class="jumbotron">
    <h1 class="container text-center">Create a Student</h1>
</div>
<div class="container">
    <form method="POST" action="/users/create">
    <input type = 'hidden' name = "authenticity_token" value = "<%=form_authenticity_token%>">
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Full Name" name="name">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Major" name="major">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Degree" name="degree">
        </div>
        <p>Where are they in their college search?</p>
        <select class="custom-select custom-select-sm" name="stage">
            <option value="applied">Applied</option>
            <option value="applying">Applying</option>
            <option value="accepted">Accepted</option>
            <option value="unsure">Unsure</option>
        </select>
        <p>Choose a mentor</p>
        <select class="custom-select custom-select-sm" name="assignedMentor">
            <% @mentor.each do |mentor| %>
                <option value=<%= mentor.id %> ><%= mentor.name %></option>
             <% end %>
        </select>

        <div class="form-group">
            <input type="text" class="form-control" placeholder="Email" name="email">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Password" name="password">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" placeholder="Confirm password" name="password_confirmation">
        </div>
        <button type="submit" name="Create" class="btn btn-success btn-lg btn-block">Create</button>
    </form>
    <small class="form-text text-muted"><a href="/mentors/login">Already a Student? Sign in here</a></small>
</div>
